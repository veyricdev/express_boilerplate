{
  "name": "express_boilerplate",
  "version": "1.0.0",
  "description": "Express V5 Boilerplate TypeScript",
  "scripts": {
    "dev": "node --import=tsx --watch src/index.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && swc src -d dist",
    "start": "node dist/src/index.js",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "lint:lint-staged": "lint-staged",
    "prisma:generate": "prisma generate",
    "prisma:migrate-init": "npx prisma migrate dev --name init",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate-reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "8.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@scalar/express-api-reference": "0.8.30",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.8",
    "compression": "1.8.1",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "fs-extra": "11.3.3",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "lint-staged": "16.2.7",
    "mongoose": "9.1.1",
    "ms": "2.1.3",
    "pg": "^8.16.3",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "pino-pretty": "13.1.3",
    "pino-roll": "^4.0.0",
    "telegraf": "4.16.3",
    "zod": "4.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/fs-extra": "11.0.4",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "prisma": "^7.2.0",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "author": "Veyric",
  "license": "ISC",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=22.21.1"
  }
}
